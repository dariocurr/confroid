<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <Button
            android:text="EXPORT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/exportConfigurationsButton"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="@+id/recyclerView"
            app:layout_constraintStart_toStartOf="@+id/recyclerView" app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintVertical_bias="0.909"/>
    <Button
            android:text="IMPORT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/importConfigurationsButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/exportConfigurationsButton"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.909"/>
    <Button
            android:text="NEW FILE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/newFileButton"
            app:layout_constraintEnd_toStartOf="@+id/exportConfigurationsButton"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.51"
            app:layout_constraintVertical_bias="0.909"/>
</androidx.constraintlayout.widget.ConstraintLayout>